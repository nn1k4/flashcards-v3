{
  "$schema": "https://json.schemastore.org/prettierrc",
  "plugins": ["prettier-plugin-organize-imports"],
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "quoteProps": "as-needed",
  "endOfLine": "lf",
  "overrides": [
    { "files": "*.md", "options": { "proseWrap": "always" } },
    { "files": "*.json", "options": { "quoteProps": "preserve" } }
  ]
}
